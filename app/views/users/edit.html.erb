<h2>User Profile Edit</h2>
<%= render 'layouts/user_error', user: @user %>
<%= form_for (@user) do |f| %>

<div class="field_row">
<%= f.label :name, "Name" %>
<%= f.text_field :name %>
</div>

<div class="field_row">
<%= f.label :profile_image, "Image" %>
<%= f.attachment_field :profile_image %>
</div>

<div class="field_row">
<%= f.label :introduction, "Introduction" %>
<%= f.text_field :introduction %>
</div>
<%= f.submit 'Update User',class: "btn btn-primary col-xs-12" %>

<% end %>
