
  <h2>User Profile</h2>
  <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
  <table class="table">
    <tr>
      <th>name</th><th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th><th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th><th><%= user.followings.count %></th>
    </tr>
    <tr>
      <th>followers</th><th><%= user.followers.count %></th>
    </tr>
  </table>
