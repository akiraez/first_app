
<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>
  <%= render 'layouts/book_error', book: @book %>
  <%= form_for (@book) do |f| %>
  
<div class="field_row">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title,class: "col-xs-12 book_title" %>
</div>

<div class="field_row">
  <%= f.label :body, "Opinion" %>
  <%= f.text_field :body,class: "col-xs-12 book_body" %>
</div>

  <%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>

  <% end %>
  <%= link_to"Show",book_path(@book) %>
  <%= link_to"Back",books_path %>

</div>
